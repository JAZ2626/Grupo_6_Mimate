<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('../partials/head') %>
        <link rel="stylesheet" href="/css/poductDeta.css">
        <title>Document</title>
</head>

<body>
    <%- include('../partials/header') %>
        <main>
            <div class="main-sub">
                <p class="inicio-bar"><a href="/">Inicio</a> > <a href="#">Productos</a> > <a
                        href="#">Nombre
                        del producto</a></p>
                <section class="product">
                    <img class="product-img" src= <%= image %> alt="">
                    <div class="detalle">
                        <h3 class="product-name"><%= name %></h3>
                        <h6 class="precio">$<%= price %></h6>
                        <div class="pay">
                            <i class="fa fa-credit-card"></i>
                            <p>6 cuotas sin interes de <strong><%= price/6 %></strong></p>
                        </div>
                        <div class="pay">
                            <i class="fa fa-credit-card"></i>
                            <p>%15 con tranferencia</p>
                        </div>
                        <a href="#">Ver medios de pago</a>
                        <br>
                        <input id="button" type="button" value="Agregar al Carrito" href="/productCart">
                        <div class="envios">
                            <p class="envio-text"><i class="fa-solid fa-truck"></i> Medios de envio</p>

                            <div class="envio">
                                <input class="text-cod" type="search" value="">
                                <input class="calcular" type="button" value="Calcular">
                            </div>

                            <a href="#">No se mi codigo postal</a>
                        </div>
                        <p class="compartir">Compartir: <i class="fa-brands fa-instagram"></i> <i
                                class="fa-brands fa-square-facebook"></i><i class="fa-brands fa-whatsapp"></i></p>
                    </div>
                    <div class="descripicion">
                        <h4>Descripcion:</h4>
                        <p><%= description %></p>
                    </div>
                </section>
                <section class="product-relac">
                    <br>
                    <h3 class="titulo">Producto relacionados:</h3>
                    <br>
                    <div class="articulos">
                        <% products.forEach(product => {
                         if (product.category === category && product.id <=8) { %>
                            <article class="articulo1">
                                <a href="/products/productDetail/<%=product.id%>">
                                <img src= <%= product.image %>  alt="i">
                                <div class="descripcions">
                                    <p class="precios">$<%= product.price %></p>
                                    <p class="descripciones"><%= product.name %></p>
                                </div>
                                </a> 
                             </article>
                             <% }}); %> 
                        </div>
            </section>
            <br>
        </main>
        <%- include('../partials/footer') %>
</body>

</html>